<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
android:descendantFocusability="beforeDescendants"
android:focusableInTouchMode="true"
tools:context="com.centura_technologies.mycatalogue.Order.Controller.OrdersList">
    <RelativeLayout
        android:id="@+id/pane"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primarycolor"
                android:titleTextColor="@color/white"
                android:minHeight="?attr/actionBarSize"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/toolbar_title"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/search"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_marginRight="16dp"
                            android:background="@drawable/whiterounded"
                            android:id="@+id/serachorder"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:hint="Search Shortlist By ShortlistNumber, ShortlistName or ShortlistNumber"
                            android:imeOptions="actionDone"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="#d9d9d9"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_below="@+id/appbar"
            android:id="@+id/empty_shortlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <!--<ImageView
                android:id="@+id/emptyshortlist"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:src="@drawable/ic_alert_circle_outline_grey600_24dp" />-->

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="No Shortlisted Found!!!" />
            <!--<TextView
                android:id="@+id/text1"
                android:layout_below="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shortlist now??"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginTop="5dp"
                android:gravity="center">
                <android.support.v7.widget.CardView
                    android:id="@+id/shortlistnow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shortlist Now!!!"
                        android:textSize="18sp"
                        android:textColor="@color/accentcolor"
                        android:padding="10dp"/>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/appbar"
            android:id="@+id/shortlistlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="6.5"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Customer Name"
                    android:paddingLeft="5dp"
                    android:background="@drawable/transparentsquarebutton"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/customernumber"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Customer Number"
                    android:background="@drawable/transparentsquarebutton"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/customeremail"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Customer Email"
                    android:background="@drawable/transparentsquarebutton"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/shortlistnumber"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Shortlist Number"
                    android:background="@drawable/transparentsquarebutton"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/productcount"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Total Product"
                    android:background="@drawable/transparentsquarebutton"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/shortlistdate"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Shortlist Date"
                    android:background="@drawable/transparentsquarebutton"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/transparentsquarebutton">
                    <ImageView
                        android:id="@+id/deleteshortlist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:src="@drawable/ic_delete_grey600_24dp"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/shortlistlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview"
            android:background="@color/white"/>
    </RelativeLayout>

<android.support.design.widget.FloatingActionButton
    android:id="@+id/fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="@dimen/fab_margin"
    android:src="@drawable/fab_plus_icon" />

</android.support.design.widget.CoordinatorLayout>