<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sync_all"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.centura_technologies.mycatalogue.configuration.SyncAll"
    tools:showIn="@layout/activity_sync_all">
    <LinearLayout
        android:id="@+id/synctab"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            android:text="You would like to Syncronise All Data ?"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="800dp"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/viewcolor"/>

    </LinearLayout>
</RelativeLayout>
