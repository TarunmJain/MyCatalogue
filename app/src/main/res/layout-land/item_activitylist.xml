<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="1dp"
    android:id="@+id/activitypane">

    <ImageView
        android:id="@+id/deleteactivity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_delete_grey600_24dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/ownedby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owned By : "
        android:textSize="14sp"
        android:textColor="@color/greytext"
        android:padding="14dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/subject"
        android:layout_below="@+id/ownedby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject : "
        android:textSize="14sp"
        android:textColor="@color/greytext"
        android:padding="14dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/activitytype"
        android:layout_below="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity type : "
        android:textSize="14sp"
        android:textColor="@color/greytext"
        android:padding="14dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/status"
        android:layout_below="@+id/activitytype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status : "
        android:textSize="14sp"
        android:textColor="@color/greytext"
        android:padding="14dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>