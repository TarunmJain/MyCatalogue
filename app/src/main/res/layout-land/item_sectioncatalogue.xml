<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleColor="#000000"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleDuration="350"
        app:mrl_rippleFadeDuration="75"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"
        app:mrl_ripplePersistent="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent">

            <com.joooonho.SelectableRoundedImageView
                android:visibility="gone"
                android:id="@+id/catimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text"
                android:scaleType="fitXY"
                android:src="@drawable/test"
                app:sriv_border_width="0dp"
                app:sriv_left_bottom_corner_radius="0dp"
                app:sriv_left_top_corner_radius="4dp"
                app:sriv_right_bottom_corner_radius="0dp"
                app:sriv_right_top_corner_radius="4dp" />
            <!--         <ImageView
                         android:id="@+id/image"
                         android:scaleType="fitXY"

                android:layout_above="@+id/text"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"/>-->
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:textStyle="bold" />


        </RelativeLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</RelativeLayout>

