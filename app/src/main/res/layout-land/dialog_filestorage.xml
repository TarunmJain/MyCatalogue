<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/settaxlabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose File Storage"
        android:textSize="24sp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@color/black"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/storegeOptions"
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:padding="10dp"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/settaxlabel"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/filestorageset"
            android:elevation="5dp"
            android:layout_toLeftOf="@+id/filestoragecancel"
            android:background="@drawable/transparentsquarebutton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="SET"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/accentcolor"/>
        <Button
            android:id="@+id/filestoragecancel"
            android:background="@drawable/transparentsquarebutton"
            android:elevation="5dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="CANCEL"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>



</RelativeLayout>